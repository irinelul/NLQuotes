{
  "name": "northernpedia",
  "type": "module",
  "private": true,
  "version": "1.0.1",
  "scripts": {
    "dev:server": "nodemon index.js",
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "vite build && node scripts/generate_static_topics.js --domain nlquotes.com --year 2025 --timeRange all --limit 20",
    "predeploy": "npm ci",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "node index.js",
    "test": "vitest"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "mongoose": "^9.1.3",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.11",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "redis": "^5.10.0",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
